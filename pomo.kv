#:kivy 1.0

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<ColoredLabel@Label+BackgroundColor>
    background_color: 0, 0, 1, 1



BoxLayout:
    orientation: 'vertical'
    Label:
        height: 4
        id: top_buffer
        size_hint_y: None
    BoxLayout:
        orientation: 'horizontal'
        Label:
            width: 4
            id: left_buffer
            size_hint_x: None
        ColoredLabel:
            id: center_text
            text: 'Hello world, this is PoMo'
        Label:
            width: 4
            id: right_buffer
            size_hint_x: None
    Label:
        height: 3
        id: bottom_buffer
        size_hint_y: None
